generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ActivityLog {
  id            String   @id @map("_id")
  action        String
  adminUsername String
  portalId      String?
  timestamp     DateTime @db.Date
}

model CCTVConfig {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  url String?
}

model PortalStatus {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId // <-- UBAH BARIS INI
  lastUpdated DateTime @db.Date
  portalId    String   @unique
  status      Boolean
  updatedBy   String
}

model User {
  id       String @id @map("_id")
  password String
  username String @unique
}

model Management {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  position String
  phone    String
  createdAt DateTime @default(now()) @db.Date
  updatedAt DateTime @updatedAt @db.Date
}
